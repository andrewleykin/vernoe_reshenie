*, *:before, *:after
	vertical-align baseline
	font-weight inherit
	font-family inherit
	font-style inherit
	font-size 100%
	border 0 none
	outline 0 none
	padding 0
	margin 0
	box-sizing border-box

html,body
	width 100%
	height 100%
	color mainColor
	font-family mainFont
	font-size: rem(16)
	line-height: 1.2
	@media (max-width: 960px) 
		font-size: 12px;

h1,h2,h3,h4,h5,h6
	margin 0

ul,li
	list-style-type none

p
	margin 0

a
	text-decoration none
	color black

img
	max-width 100%

audio,
canvas,
iframe,
img,
svg,
video
	vertical-align middle


textarea
	resize none